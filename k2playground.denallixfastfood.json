{
  "swagger": "2.0",
  "info": {
    "title": "K2 Playground - Connecting to REST APIs",
    "version": "v1"
  },
   "host":"k2playground.azurewebsites.net",
   "basePath":"/api/denallixfastfood",
   "schemes":[  
      "https"
   ],
  "paths": {
    "/WesternFood/menu": {
      "get": {
        "parameters": [],
        "responses": {
          "200": {
            "description": "Success",
            "schema": {
              "$ref": "#/definitions/Menu"
            }
          }
        }
      }
    },
    "/WesternFood/menu/item": {
      "get": {
        "parameters": [
			{
				"in": "query",
				"name": "id",
				"required": true,
				"type": "integer"
			}
		],
        "responses": {
          "200": {
            "description": "Success",
            "schema": {
              "$ref": "#/definitions/MenuItem"
            }
          }
        }
      }
    },
    "/WesternFood/order": {
      "post": {
        "tags": [
          "CognitiveServices"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "schema": {
              "$ref": "#/definitions/Order"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "schema": {
              "type": "string"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "Menu": {
      "type": "object",
      "properties": {
        "title": {
			"type": "string"
        },
        "description": {
			"type": "string"
        },
        "datePrepared": {
			"type": "string",
			"format": "date-time"
        },
        "menuItems": {
			"type": "array",
			"items": {
				"$ref": "#/definitions/MenuItem"
			}
        }
      }
    },
    "MenuItem": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "price": {
          "format": "float",
          "type": "number"
        },
        "addedOn": {
			"type": "string",
			"format": "date-time"
        }
      }
    },
    "Order": {
      "required": [
        "analyseSentimentSecret",
        "detectLanguageSecret",
        "text"
      ],
      "type": "object",
      "properties": {
        "CustomerName": {
          "type": "string"
        },
        "CustomerAddress": {
          "type": "string"
        },
        "OrderItems": {
          "type": "array",
			"$ref": "#/definitions/OrderItem"
        }
      }
    },
    "OrderItem": {
      "type": "object",
      "properties": {
        "menuItemId": {
          "type": "integer"
        },
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "unitPrice": {
          "format": "float",
          "type": "number"
        },
        "quantity": {
          "type": "integer"
        },
        "totalPrice": {
          "format": "float",
          "type": "number"
        }
      }
    }
  },
	"securityDefinitions":{  

	},
	"security":[  

	],
	"tags":[  

	]
}
